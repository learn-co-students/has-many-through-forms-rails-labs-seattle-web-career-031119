<%= form_for @post do |f| %>
  <%= f.text_field :title%>
  <%= f.text_field :content%>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name%>
  <%= f.fields_for :categories, Category.new do |category_field| %>
    <%= category_field.text_field :name%>
  <%end%>
  <%= f.submit %>
<%end%>
