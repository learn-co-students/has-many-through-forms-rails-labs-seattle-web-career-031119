<h1> <%= @post.title %> </h1>
<p> <%= @post.content %> </p>

<ul> <% @post.categories.each do |cat| %>
  <li> <%= cat.name %> </li>
<% end %> </ul>

<h3> Comments: </h3>
<% @users.each do |user| %>
  <p>Username: <%= link_to user.username, user_path(user) %></p>
<% end %>

<% @users.each do |user| %>
  <ul><% user.comments.each do |com| %>
    <li> <%= user.username + " says: "+ com.content %> </li>
  <% end %></ul>
<% end %>

<%= render 'get_comment', comment: @new_comment %>
